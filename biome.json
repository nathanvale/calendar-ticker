{
	"$schema": "https://biomejs.dev/schemas/2.3.8/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"noNonNullAssertion": "off"
			}
		}
	},
	"formatter": {
		"enabled": true
	},
	"css": {
		"formatter": {
			"enabled": true
		},
		"linter": {
			"enabled": true
		},
		"parser": {
			"cssModules": true,
			"tailwindDirectives": true
		}
	},
	"overrides": [
		{
			"includes": ["**/*.test.*", "**/__tests__/**/*"],
			"linter": {
				"rules": {
					"suspicious": {
						"noTemplateCurlyInString": "off"
					},
					"correctness": {
						"noUnusedFunctionParameters": "off"
					}
				}
			}
		}
	]
}
