{
	"name": "calendar-ticker",
	"version": "1.0.0",
	"private": true,
	"description": "Calendar ticker application",
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"test": "bun run --filter '@calendar-ticker/*' test",
		"typecheck": "bun run --filter '*' typecheck",
		"format": "bun run biome format --write .",
		"format:check": "bun run biome format .",
		"lint": "bun run biome lint .",
		"check": "bun run biome check --write .",
		"ci": "bun --filter '*' typecheck && bun run check && bun --filter '*' test && bun --filter '*' build",
		"dev": "bun run --filter '@calendar-ticker/frontend' dev",
		"build": "bun run --filter '@calendar-ticker/frontend' build",
		"storybook": "bun run --filter '@calendar-ticker/storybook' storybook",
		"prepare": "husky"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.7",
		"@commitlint/cli": "^20.1.0",
		"@commitlint/config-conventional": "^20.0.0",
		"bun-types": "^1.3.3",
		"husky": "^9.1.7",
		"typescript": "^5.7.2"
	}
}
